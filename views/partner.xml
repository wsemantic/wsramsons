<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<record id="view_partner_form_inherit_pcontacto" model="ir.ui.view">
    <field name="name">res.partner.form.inherit.pcontacto</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <!-- Decide dónde quieres colocar el campo -->
        <!-- Por ejemplo, añadirlo después del campo "function" -->
        <xpath expr="//field[@name='function']" position="after">
            <field name="pcontacto"/>
        </xpath>
        
    </field>
</record>

<!-- Acción y menú filtrado para el grupo comercial -->
<record id="action_contacts_comercial" model="ir.actions.act_window">
    <field name="name">Contactos</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">['|', ('user_id','=',uid), ('parent_id.user_id','=',uid)]</field>
    <field name="context">{}</field>
    <field name="groups_id" eval="[(4, ref('wsramsons.group_comercial'))]"/>
</record>

<record id="contacts.menu_contacts" model="ir.ui.menu">
    <field name="groups_id" eval="[(4, ref('wsramsons.group_all_partner'))]"/>
</record>

<menuitem id="wsramsons_menu_contacts_comercial"
          name="Contactos"
          action="wsramsons.action_contacts_comercial"
          groups="wsramsons.group_comercial"/>
</odoo>
