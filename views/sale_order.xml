<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_commercial_partner" model="ir.ui.view">
        <field name="name">sale.order.form.commercial.partner</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('wsramsons.group_comercial')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">['|', ('user_id', '=', uid), ('parent_id.user_id', '=', uid)]</attribute>
                <attribute name="options">{'no_open': True, 'no_create': True, 'no_create_edit': True}</attribute>
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
