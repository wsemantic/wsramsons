<?xml version="1.0" encoding="utf-8"?>
<!-- original odoo/addons/account/views/report_invoice.xml -->
<odoo>
	<!-- Extensión del template de la factura -->
	<template id="report_rs_invoice_document_inherit" inherit_id="account.report_invoice_document">
		<!-- Localización del código de cliente -->
		<xpath expr="//div[@id='informations']//div[@name='customer_code']" position="after">
			<div class="col-auto col-3 mw-100 mb-2">
				<strong>Cod. Comercial:</strong>
				<p class="m-0" t-if="o.invoice_user_id and 
									 o.invoice_user_id.partner_id and 
									 o.invoice_user_id.partner_id.ref" t-field="o.invoice_user_id.partner_id.ref"/>
			</div>
		</xpath>
		<xpath expr="//table[@name='invoice_line_table']/tbody" position="attributes">            
            <attribute name="style">font-size: 11px !important;</attribute>            
        </xpath>
            <xpath expr="//td[@name='td_taxes']" position="attributes">
                <attribute name="style">width: 50px !important; max-width: 50px !important; text-align: right !important;</attribute>
            </xpath>
        <xpath expr="//td[@name='td_taxes']/span" position="replace">
            <span t-esc="', '.join([str(tax.amount) + '%' for tax in line.tax_ids])"/>
        </xpath>
		<xpath expr="//p[@name='note']" position="replace">
			<!-- Variable para verificar si todos los impuestos son 0% -->
			<t t-set="any_tax_zero" t-value="any(not line.tax_ids or all(tax.amount == 0 for tax in line.tax_ids) for line in o.invoice_line_ids)"/>
			<!-- Variable para verificar si la nota indica "Inversión del Sujeto Pasivo" -->
			<t t-set="is_inversion_note" t-value="'inversión del sujeto pasivo' in (o.fiscal_position_id.note or '').lower()"/>
			<!-- Condición para imprimir la nota -->
			<p t-if="not is_html_empty(o.fiscal_position_id.note) and not (is_inversion_note and not any_tax_zero)" name="note">
				<span t-field="o.fiscal_position_id.note"/>
			</p>
		</xpath>	

		<xpath expr="//td[@class='text-end']/span[@t-field='line.product_uom_id']" position="replace"/>
		
       <!-- Añadir el código EAN (default_code) a las líneas de factura -->
        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@name='th_description']" position="after">
            <th name="th_barcode" class="text-start"><span>EAN</span></th>
        </xpath>
        
        <xpath expr="//table[@name='invoice_line_table']/tbody/t/tr/t[@name='account_invoice_line_accountable']/td[@name='account_invoice_line_name']" position="after">
            <td name="account_invoice_line_barcode" class="text-start">
                <span t-field="line.product_id.barcode"/>
            </td>
        </xpath>
        
        <!-- Modificar el título de la factura para subirlo y reducir el tamaño -->
        <xpath expr="//div[@class='mt-5']" position="attributes">
            <attribute name="class">mt-2</attribute>
        </xpath>
        
        <xpath expr="//h2" position="attributes">
            <attribute name="style">font-size: 18px; margin-top: 0px;</attribute>
        </xpath>
		
	</template>
    <template id="inherit_external_layout_boxed" inherit_id="web.external_layout_boxed">
        <!-- Buscamos el div que lleva t-attf-class="footer o_boxed_footer ..." -->
        <xpath expr="//div[contains(@t-attf-class, 'footer') and contains(@t-attf-class, 'o_boxed_footer')]" position="attributes">
            <attribute name="style">font-size: 9px !important;</attribute>
        </xpath>
    </template>
	
    <!-- Hereda la vista tree de facturas -->
    <record id="view_invoice_tree_inherit_related_fields" model="ir.ui.view">
      <field name="name">account.move.tree.inherit.related.fields</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_invoice_tree"/>
      <field name="arch" type="xml">
        <!-- Insertamos después del campo "ref" -->
        <xpath expr="//tree/field[@name='ref']" position="after">
          <field name="partner_credit_policy" string="Poliza Cred"/>
          <field name="partner_ref" string="Codigo Cli"/>
          <field name="commercial_ref" string="Codigo Comerc"/>
        </xpath>
      </field>
    </record>

    <!-- =========================================================
         ACCIÓN "MIS FACTURAS" (solo grupo_comercial)
         - Filtra por partner cuyo comercial == usuario logado
         - Incluye facturas y rectificativas de cliente
       ========================================================= -->
    <record id="action_move_out_invoice_commercial" model="ir.actions.act_window">
        <field name="name">Mis facturas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form,activity</field>
        <field name="domain">[('move_type','in',('out_invoice','out_refund')), ('partner_id.user_id','=',uid)]</field>
        <field name="context">
            {
                'default_move_type': 'out_invoice',
                'search_default_customer': 1,
                'search_default_unpaid': 0
            }
        </field>
        <field name="view_id" ref="account.view_move_tree"/>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <!-- Restringimos la acción al grupo comercial por seguridad -->
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_comercial')])]"/>
    </record>

    <!-- =========================================================
         MENÚ ÚNICO "MIS FACTURAS" (solo grupo_comercial)
         Lo colgamos de la app de Facturación
       ========================================================= -->
    <menuitem id="menu_action_move_out_invoice_commercial"
              name="Mis facturas"
              parent="account.menu_finance"
              action="action_move_out_invoice_commercial"
              groups="wsramsons.group_comercial"
              sequence="1"/>

    <!-- =========================================================
         OCULTAR MENÚS ESTÁNDAR PARA EL GRUPO COMERCIAL
         Estratégia: asignar los menús estándar al grupo_all_partner
         (el grupo comercial NO pertenece a group_all_partner),
         con lo que desaparecen para comerciales.
       ========================================================= -->

    <!-- Raíz de clientes (por si lo usas) -->
    <record id="account.menu_finance_receivables" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Raíz de proveedores -->
    <record id="account.menu_finance_payables" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Bancos / Tesorería -->
    <record id="account.menu_finance_bank" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Gestión / Configuración contable dentro de la app -->
    <record id="account.menu_finance_management" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Informes -->
    <record id="account.menu_finance_reports" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- =========================================================
         LISTADOS / ENTRADAS DIRECTAS QUE NO DEBE VER EL COMERCIAL
         Clientes: "Facturas" y "Rectificativas" estándar
       ========================================================= -->
    <record id="account.menu_action_move_out_invoice_type" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <record id="account.menu_action_move_out_refund_type" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Proveedores: "Facturas proveedor" y "Rectificativas proveedor" -->
    <record id="account.menu_action_move_in_invoice_type" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <record id="account.menu_action_move_in_refund_type" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Cobros y pagos (quick entries/boards) -->
    <record id="account.menu_finance_cash_management" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Diarios e ítems de diario de ventas/compra/banco (si los tuvieses expuestos) -->
    <record id="account.menu_action_account_moves_all" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- Analítica / Impuestos / Configuración detallada (si aparecen en Community) -->
    <record id="account.menu_accounting" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- =========================================================
         (Opcional) Ocultar accesos rápidos que cuelguen del root
         Si tu base los expone como menús directos:
       ========================================================= -->
    <record id="account.menu_board_finance" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('wsramsons.group_all_partner')])]"/>
    </record>

    <!-- =========================================================
         NOTA sobre el menú raíz "account.menu_finance":
         Lo dejamos sin tocar para que la app aparezca a ambos.
         El grupo comercial verá solo "Mis facturas".
         Si quisieras ocultar la app completa al grupo comercial
         salvo el acceso directo, podríamos crear una sección propia.
       ========================================================= -->

</odoo>

